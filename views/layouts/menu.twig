{% set menuItems = routesRepository.getAll() %}
<div class="progress">
    <div class="progress-bar bg-success" role="progressbar" style="width: 0%;" aria-valuemin="0" aria-valuemax="100">
        <span class="menu-progress-label js-menu-progress-label"></span>
    </div>
</div>
<div class="menu-items-container">
    <div class="container">
        <div class="row">
            <div class="col col-lg-2 px-0">
                {% set class = is_current_url('/') ? 'active' : '' %}
                <a href="/" class="{{ class }}"><i class="fad fa-house"></i></a>
            </div>

            {% for menuItem in menuItems %}
                {% if menuItem.routes|length == 1 %}
                    {% include "layouts/menu/single-item.twig" with {'menuItem': menuItem} only %}
                {% else %}
                    {% include "layouts/menu/sub-items.twig" with {'menuItem': menuItem} only %}
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
