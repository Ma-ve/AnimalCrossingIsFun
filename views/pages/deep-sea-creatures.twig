{% extends "layouts/base.twig" %}

{% block content %}

    {% include "pages/snippets/filters.twig" with {'filters': filters, 'placeholder': random(items).getName() } only %}

    {% set columnConfiguration %}

        <div class="col-lg-3">
            {% set vars = {'sort': sort, 'label': 'Name', 'property': 'name', 'sortIcon': ['fa-sort-alpha-down', 'fa-sort-alpha-down-alt']} %}
            {% include "pages/snippets/table-header-column.twig" with vars only %}

        </div>
        <div class="col-lg-2">
            <strong>Time</strong>
        </div>
        <div class="col-lg-2">
            {% set vars = {'sort': sort, 'label': 'Bells', 'property': 'price', 'sortIcon': ['fa-sort-numeric-down', 'fa-sort-numeric-down-alt']} %}
            {% include "pages/snippets/table-header-column.twig" with vars only %}

        </div>
        <div class="col-lg-2">
            {% set vars = {'sort': sort, 'label': 'Swimming pattern', 'property': 'swimming_pattern', 'sortIcon': ['fa-sort-alpha-down', 'fa-sort-alpha-down-alt']} %}
            {% include "pages/snippets/table-header-column.twig" with vars only %}

        </div>
        <div class="col-lg-2 offset-lg-1">
            <strong>Obtained</strong>
        </div>
    {% endset %}

    {% include "pages/snippets/table-header.twig" with {
        'columnConfiguration': columnConfiguration
    } %}

    {% for item in items %}
        {% embed "pages/snippets/table-content.twig" with {
            'item':  item,
            'index': loop.index
        } only %}
            {% block subRow %}
                <div class="col-lg-3 col-2 order-lg-0 order-1 text-lg-left text-center">
                    {% for bullet in item.getBullets() %}
                        {% set bulletBadgeClass = '' %}
                        {% if bullet.value %}
                            {% set bulletBadgeClass = ' badge-info' %}
                        {% endif %}
                        <span class="badge{{ bulletBadgeClass }}">{{ bullet.month }}</span>
                    {% else %}
                        <span class="badge">{{ bullet.month }}</span>
                        {{ bullet|raw }}
                    {% endfor %}
                </div>
                <div class="col-lg-2 col-4 {{ priceOffset|default('offset-0') }} offset-lg-0 text-lg-left text-center {{ marginTops|default('') }}">
                    {% for creatureTime in item.getTime() %}
                        <span class="badge badge-danger">{{ creatureTime }}</span>
                    {% endfor %}
                </div>
                <div class="col-lg-2 order-lg-1 col-4 order-0 text-lg-left text-center"><span class="badge badge-warning"><!--
                    --><i class="fad fa-bells"></i> {{ item.getPrice() }}<!--
                    --></span><!--
                --></div>
                <div class="col-lg-2 order-lg-1 col-4 order-1 text-lg-left text-center">
                    <span class="badge badge-dark">{{ item.getSwimmingPattern() }}</span>
                </div>
            {% endblock %}
        {% endembed %}

    {% endfor %}


{% endblock %}
