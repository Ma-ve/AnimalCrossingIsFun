
<div class="item-row-container align-items-center ml--15 mr--15">
    <div class="row">
        <div class="col-2 image-placeholder text-align-center">
            <img src="{{ item.getImageLink() }}">
        </div>

        <div class="col-10">
            <div class="row item-row item-row-main align-items-center pl-0 pr-0">
                {% include "pages/snippets/table-row-main.twig" with {
                    'item':                 item,
                    'caughtCheckboxOffset': caughtCheckboxOffset,
                    'lastColumn':           lastColumn
                } only %}
            </div>
            <div class="row item-row item-row-sub pl-0 pr-0">
                {% block subRow %}{% endblock %}
            </div>
        </div>
    </div>
</div>