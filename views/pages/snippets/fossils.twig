<div class="item-row-container align-items-center ml--15 mr--15">
    <div class="row">
        <div class="col-2 image-placeholder text-align-center"><img src="{{ fossil.getImageLink() }}"></div>
        <div class="col-10">
            <div class="row item-row item-row-main align-items-center pl-0 pr-0">
                <div class="col-4"><strong>{{ fossil.getName() }}</strong></div>
                <div class="col-2 offset-6">
                    <span>[ ]</span>
                    <span>&gt;&gt;&gt;</span>
                </div>
            </div>
            <div class="row item-row item-row-sub pl-0 pr-0">
                <div class="col-4">
                    {% if fossil.getCategory() %}
                        <span class="badge badge-info">{{ fossil.getCategory() }}</span>
                    {% endif %}
                </div>
                <div class="col-2"><span class="badge badge-warning"><!--
                    --><i class="fad fa-bells"></i> {{ fossil.getPrice() }}<!--
                    --></span><!--
                --></div>
            </div>
        </div>
    </div>
</div>