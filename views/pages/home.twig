{% extends "layouts/base.twig" %}

{% block content %}

    <div class="card row mx-0 homepage-card">
        <div class="col-12 pt-2">
            <div class="col-12">
                <h3>Your progress</h3>
            </div>
        </div>
        <div class="col-12 progress-bars-container">
            {% for progressItem in progressItems.all %}
                <div class="col-12" data-group="{{ progressItem.group }}" data-items="{{ progressItem.names|join(',') }}">
                    <div class="row py-3">
                        <div class="col-6 col-lg-2 order-0 mb-2 mb-lg-0 align-self-center">
                            <i class="fad fa-{{ progressItem.icon }}"></i> {{ progressItem.label }}
                        </div>
                        <div class="col-12 col-lg-8 order-2 order-lg-1">
                            <div class="progress">
                                <div class="progress-bar bg-info" role="progressbar" style="width: 0;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-lg-2 order-1 order-lg-2 text-right text-lg-left align-self-center">
                            <span class="badge badge-danger">
                                <span class="js-progress-text">?</span> / {{ progressItem.count|default('?') }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="card row mx-0 mt-5 homepage-card">
        <div class="col-12 pt-2">
            <div class="col-12">
                <h3>Stats for {{ progressItems.seasonal.month }}</h3>
            </div>
        </div>
        <div class="col-12 progress-bars-container">
            {% for progressItem in progressItems.seasonal.items %}
                <div class="col-12" data-group="{{ progressItem.group }}" data-items="{{ progressItem.names|join(',') }}">
                    <div class="row py-3">
                        <div class="col-6 col-lg-2 order-0 mb-4 mb-lg-0 align-self-center">
                            <i class="fad fa-{{ progressItem.icon }}"></i> {{ progressItem.label }}
                        </div>
                        <div class="col-8 col-lg-7 order-2 order-lg-1">
                            <div class="progress">
                                <div class="progress-bar bg-info" role="progressbar" style="width: 0;" aria-valuenow="" aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-lg-1 order-1 order-lg-2 text-right text-lg-left align-self-center">
                            <span class="badge badge-danger">
                                <span class="js-progress-text">?</span> / {{ progressItem.count|default('?') }}
                            </span>
                        </div>
                        <div class="col-4 col-lg-2 order-3 text-right text-lg-left align-self-center">
                            <a href="/{{ progressItem.label|lower() }}#{{ progressItems.seasonal.month }}" class="btn btn-sm btn-warning">
                                Details <small><i class="fad fa-chevron-double-right"></i></small>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
