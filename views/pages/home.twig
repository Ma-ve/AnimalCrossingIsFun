{% extends "layouts/base.twig" %}

{% block content %}

    {% set progressItems = [
        {
            'icon': 'fish',
            'label': 'Fish',
            'width': '0',
            'text': '0 / 80',
        },
        {
            'icon': 'bug',
            'label': 'Bugs',
            'width': '0',
            'text': '0 / 80',
        },
        {
            'icon': 'bone',
            'label': 'Fossils',
            'width': '0',
            'text': '0 / 60',
        },
        {
            'icon': 'tools',
            'label': 'Recipes',
            'width': '0',
            'text': '0 / 13',
        }
    ] %}

    <div class="card row mx-0" style="background-color: var(--bg-color);">
        <div class="col-12 pt-2">
            <div class="col-12">
                <h3><span style="text-decoration: line-through; opacity: 0.3;">Your progress</span> <small>Coming soon!</small></h3>
            </div>
        </div>
        <div class="col-12 progress-bars-container" style="">
            {% for progressItem in progressItems %}
                <div class="col-12">
                    <div class="row" style="padding: 16px 0;">
                        <div class="col-6 col-lg-2 order-0 mb-2 mb-lg-0 align-self-center">
                            <i class="fad fa-{{ progressItem.icon }}"></i> {{ progressItem.label }}
                        </div>
                        <div class="col-12 col-lg-8 order-2 order-lg-1">
                            <div class="progress" style="height: 100%;">
                                <div class="progress-bar bg-info" role="progressbar" style="width: {{ progressItem.width }}%;" aria-valuenow="{{ progressItem.width }}" aria-valuemin="0" aria-valuemax="100">
                                    25%
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-lg-2 order-1 order-lg-2 text-right text-lg-left align-self-center">
                            <span class="badge badge-danger">{{ progressItem.text }}</span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="card row mx-0 mt-5" style="background-color: var(--bg-color);">
        <div class="col-12 pt-2">
            <div class="col-12">
                <h3><span style="text-decoration: line-through; opacity: 0.3;">Stats for {{ date()|date('F') }}</span> <small>Coming soon!</small></h3>
            </div>
        </div>
        <div class="col-12 progress-bars-container" style="">
            {% for progressItem in progressItems|slice(0, 2) %}
                <div class="col-12">
                    <div class="row" style="padding: 16px 0;">
                        <div class="col-6 col-lg-2 order-0 mb-4 mb-lg-0 align-self-center">
                            <i class="fad fa-{{ progressItem.icon }}"></i> {{ progressItem.label }}
                        </div>
                        <div class="col-8 col-lg-7 order-2 order-lg-1">
                            <div class="progress" style="height: 100%;">
                                <div class="progress-bar bg-info" role="progressbar" style="width: {{ progressItem.width }}%;" aria-valuenow="{{ progressItem.width }}" aria-valuemin="0" aria-valuemax="100">
                                    25%
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-lg-1 order-1 order-lg-2 text-right text-lg-left align-self-center">
                            <span class="badge badge-danger">{{ progressItem.text }}</span>
                        </div>
                        <div class="col-4 col-lg-2 order-3 text-right text-lg-left align-self-center">
                            <a href="/{{ progressItem.label|lower() }}" class="btn btn-sm btn-warning"><i class="fad fa-chevron-double-right"></i>
                                Details</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
