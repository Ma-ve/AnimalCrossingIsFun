{% extends "layouts/base.twig" %}

{% block content %}

    <div class="row mx-0 mt-5 p-2" style="background-color: var(--bg-color);">
        <div class="col-12">
            <div class="row">
                <div class="col-10 pt-2">
                    <h3>Profile for <strong class="name">&hellip;</strong></h3>
                </div>
                <div class="col-2 text-right align-self-center">
                    <a href="/auth/logout" class="badge badge-danger text-caps-lowercase">Log out
                        <small><i class="fad fa-chevron-double-right"></i></small></a>
                </div>
            </div>
            <hr style="width: 50%; margin-left: 0;">
            <div class="row mt-4">
                <div class="col-12">
                    <div class="row">
                        <div class="col-6">
                            <h5 class="mb-4">Save/load data to account</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="row">
                                <div class="col-8 align-self-center">
                                    <span>Currently in browser: </span>
                                    <ul>
                                    </ul>
                                </div>
                                <div class="col-4">
                                    <a class="btn btn-sm btn-secondary text-white js-">Save to account</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="row">
                                <div class="col-8 align-self-center">
                                    <span>Currently on account: </span>
                                    <ul>
                                    </ul>
                                </div>
                                <div class="col-4">
                                    <a class="btn btn-sm btn-success text-white js-">Load into browser</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr style="width: 50%; margin-left: 0;">
        </div>
    </div>


{% endblock %}
